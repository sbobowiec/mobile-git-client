<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background_color">

    <ImageView
        android:id="@+id/git_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/git_logo"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/enter_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/git_logo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/enter_username"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_username_label"
        android:layout_centerHorizontal="true"
        android:inputType="text" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:text="@string/save"
        android:textSize="20sp"
        android:textColor="@color/button_font_color"
        android:background="@drawable/button_selector" />

</RelativeLayout>